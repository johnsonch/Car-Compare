<h1>Listing vehicles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Highway</th>
    <th>City</th>
    <th>Cost</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vehicles.each do |vehicle| %>
  <tr>
    <td><%= vehicle.name %></td>
    <td><%= vehicle.highway %></td>
    <td><%= vehicle.city %></td>
    <td><%= vehicle.cost %></td>
    <td><%= vehicle.notes %></td>
    <td><%= link_to 'Show', vehicle %></td>
    <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
    <td><%= link_to 'Destroy', vehicle, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

